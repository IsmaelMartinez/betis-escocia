# =============================================================================
# BETIS ESCOCIA - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in the required values.
# Variables with default values shown can be omitted if the default is acceptable.
# =============================================================================

# -----------------------------------------------------------------------------
# SUPABASE DATABASE
# -----------------------------------------------------------------------------
# Required: Get from Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
# Required for server-side operations (rumor sync, admin actions)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Optional: Sync Script Production Database (GitHub Actions only)
# These override NEXT_PUBLIC_* vars in the sync-rumors workflow
# SUPABASE_SYNC_URL=https://your-production-project.supabase.co
# SUPABASE_SYNC_SERVICE_ROLE_KEY=your-production-service-role-key

# -----------------------------------------------------------------------------
# CLERK AUTHENTICATION
# -----------------------------------------------------------------------------
# Required: Get from Clerk dashboard
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
# Required for webhook verification
CLERK_WEBHOOK_SECRET=whsec_...

# -----------------------------------------------------------------------------
# FOOTBALL DATA API
# -----------------------------------------------------------------------------
# Required for match/standings data: https://www.football-data.org/
FOOTBALL_DATA_API_KEY=your-api-key
# Optional: API endpoint (default shown)
FOOTBALL_DATA_API_URL=https://api.football-data.org/v4
# Optional: Rate limiting (defaults shown)
API_RATE_LIMIT_PER_MINUTE=10
API_CACHE_TTL_HOURS=24
API_CACHE_TTL_LIVE_HOURS=1

# -----------------------------------------------------------------------------
# ONESIGNAL PUSH NOTIFICATIONS
# -----------------------------------------------------------------------------
# Required for push notifications: https://onesignal.com/
NEXT_PUBLIC_ONESIGNAL_APP_ID=your-app-id
ONESIGNAL_REST_API_KEY=your-rest-api-key
# Optional: Set to "1" to mock push notifications in development
MOCK_PUSH=0

# -----------------------------------------------------------------------------
# SENTRY ERROR MONITORING
# -----------------------------------------------------------------------------
# Required for error tracking: https://sentry.io/
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
# Optional: Release identifier for Sentry
NEXT_PUBLIC_SENTRY_RELEASE=

# -----------------------------------------------------------------------------
# AI / GEMINI (Soylenti Rumor Analysis)
# -----------------------------------------------------------------------------
# Required for AI rumor scoring: https://ai.google.dev/
GEMINI_API_KEY=your-gemini-api-key

# -----------------------------------------------------------------------------
# GOOGLE SERVICES
# -----------------------------------------------------------------------------
# Optional: Google Search Console verification
GOOGLE_SITE_VERIFICATION=

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
# All feature flags have sensible defaults. Only set to override.
# Values: "true" or "false" (case-insensitive, but only "true" enables)
#
# Default: false - Phase 2 features requiring external APIs or additional setup
NEXT_PUBLIC_FEATURE_CLASIFICACION=false
NEXT_PUBLIC_FEATURE_GALERIA=false
NEXT_PUBLIC_FEATURE_PARTIDOS=false
NEXT_PUBLIC_FEATURE_REDES_SOCIALES=false
NEXT_PUBLIC_FEATURE_CLERK_AUTH=false
NEXT_PUBLIC_FEATURE_ADMIN=false
NEXT_PUBLIC_FEATURE_DEBUG_INFO=false
NEXT_PUBLIC_FEATURE_RSVP=false
NEXT_PUBLIC_FEATURE_CONTACTO=false

# Default: true - Core features enabled by default
NEXT_PUBLIC_FEATURE_NOSOTROS=true
NEXT_PUBLIC_FEATURE_UNETE=true
NEXT_PUBLIC_FEATURE_SOYLENTI=true
